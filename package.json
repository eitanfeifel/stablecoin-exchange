{
  "name": "stablecoin-exchange-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "workflow:payment": "ts-node src/client.payment.ts",
    "test": "mocha --exit --require ts-node/register --require source-map-support/register src/mocha/*.test.ts",
    "api": "ts-node src/server.ts",
    "import:fx": "ts-node src/scripts/importFxRates.ts",
    "db:init": "psql -U postgres -d temporal_payments -f src/db/schema.sql",
    "db:seed": "npm run import:fx",
    "db:setup": "npm run db:init && npm run db:seed",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS temporal_payments' && createdb temporal_payments && npm run db:setup",
    "setup": "npm install && npm run db:setup && npm run import:fx"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "^1.13.2",
    "@temporalio/client": "^1.13.2",
    "@temporalio/envconfig": "^1.13.2",
    "@temporalio/worker": "^1.13.2",
    "@temporalio/workflow": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "nanoid": "3.x",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.13.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/mocha": "8.x",
    "@types/node": "^22.9.1",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "mocha": "8.x",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
